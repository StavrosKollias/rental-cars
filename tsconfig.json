{
    "compilerOptions": {
      "moduleResolution": "node",
      "outDir": "./build/",
      "baseUrl": "./",
      "paths": {
        "assets": [
          "assets/*"
        ]
      },
      "sourceMap": true,
      "noImplicitAny": false,
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true
    },
    "include": ["./src", "src/setupTests.ts",],
    "exclude": ["build", "./src/**/*.test.tsx", "./src/test_utils/utils.ts","node_modules"]
  }